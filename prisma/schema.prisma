generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DATABASE_URL")
}

model Profile {
  id           String   @id @default(uuid())
  clerkId      String   @unique
  firstName    String
  lastName     String
  email        String
  profileImage String
  age          Int
  gender       String
  height       Int
  weight       Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
